<%= simple_form_for(@product) do |f| %>
<%= f.error_notification %>
<form>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label">Product Name</label>
      <div class="col-10">
        <%= f.input :name, label: false, input_html: { class: 'form-control'}  %>
      </div>
    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label">Product ID</label>
      <div class="col-10">
         <%= f.input :productID, label: false, input_html: { class: 'form-control' }  %>
      </div>
    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label">Description</label>
      <div class="col-10">
        <%= f.input :description, label: false, input_html: { class: 'form-control' }  %>
      </div>
    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label">Price</label>
      <div class="col-10">
        <%= f.input :price, label: false, input_html: { class: 'form-control' }  %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-default' %>
    </div>
</form>
<% end %>